<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zes.squad.gmh.web.mapper.StockMapper">
	<resultMap id="BaseResultMap" type="com.zes.squad.gmh.web.entity.po.StockPo">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="type_id" jdbcType="BIGINT" property="typeId" />
		<result column="stock_name" jdbcType="VARCHAR" property="stockName" />
		<result column="unit" jdbcType="VARCHAR" property="unit" />
		<result column="amount" jdbcType="NUMERIC" property="amount" />
		<result column="created_time" jdbcType="TIMESTAMP" property="createdTime" />
		<result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
	</resultMap>
	<resultMap id="VoResultMap" type="com.zes.squad.gmh.web.entity.vo.StockVo">
		<id column="id" jdbcType="BIGINT" property="id" />
		<result column="store_id" jdbcType="BIGINT" property="storeId" />
		<result column="type_id" jdbcType="BIGINT" property="typeId" />
		<result column="type_name" jdbcType="VARCHAR" property="typeName" />
		<result column="stock_name" jdbcType="VARCHAR" property="stockName" />
		<result column="unit" jdbcType="VARCHAR" property="unit" />
		<result column="amount" jdbcType="NUMERIC" property="amount" />
	</resultMap>
	<sql id="Base_Column_List">
		`id`,`type_id`,`stock_name`,`unit`,`amount`,
		`created_time`,
		`modified_time`
	</sql>
	<select id="getAll" parameterType="Long" resultMap="BaseResultMap">
		select * from stock where type_id in
		(select id from stock_type where
			store_id=#{storeId}
		)
	</select>
	<select id="getByType" parameterType="Long" resultMap="BaseResultMap">
		select * from stock where type_id=#{typeId}
	</select>
	<insert id="insert" parameterType="com.zes.squad.gmh.web.entity.po.StockPo">
		insert into stock(type_id,stock_name,unit,amount)
		values
		(#{typeId},#{stockName},#{unit},#{amount})
	</insert>
	<update id="update" parameterType="com.zes.squad.gmh.web.entity.po.StockPo">
		update stock
		set
		type_id=#{typeId},
		stock_name=#{stockName},
		unit=#{unit},
		amount=#{amount}
		where
		id=#{id}
	</update>
	<delete id="delById" parameterType="Long">
		delete from stock where 
		id=#{id}
	</delete>
	<select id="search" parameterType="Map" resultMap="VoResultMap">
		select * from stock_vo where type_id=#{typeId} and 
		concat_ws("",stock_name,unit,amount)
		like concat('%',#{searchString},'%')
	</select>
	<select id="searchWithoutType" parameterType="Map" resultMap="VoResultMap">
		select * from stock_vo where type_id in 
		<foreach item="item" index="index" collection="typeIds"
			open="(" separator="," close=")" >
		#{item}
		</foreach>
		and
		concat_ws("",stock_name,unit,amount)
		like concat('%',#{searchString},'%')
	</select>
</mapper>